<p style="color: green"></p>

<%# <%= notice %>
<div class="p-5 mb-4 bg-body-tertiary rounded-3">
      <div class="container-fluid py-5">
        <h1 class="display-5 fw-bold"><%= @friend.first_name %> <%= @friend.last_name %></h1>
        <p class="col-md-8 fs-4">
          <strong>Email:</strong>
          <%= @friend.email %>
        </p>
        <p class="col-md-8 fs-4">
          <strong>Phone:</strong>
          <%= @friend.phone %>
        </p>
        <p class="col-md-8 fs-4">
          <strong>Twitter:</strong>
          <%= @friend.twitter %>
        </p>
        <%# <button class="btn btn-primary btn-lg" type="button">Example button</button> %>
        <div>
          <%= link_to "Edit this friend", edit_friend_path(@friend), class: "btn btn-dark" %>
          <%= link_to "Back to friends", friends_path, class: "btn btn-dark" %>
          <%= link_to "Remove", @friend, method: :delete, class: "btn btn-danger" %>
          <hr>
        </div>
      </div>
    </div>

